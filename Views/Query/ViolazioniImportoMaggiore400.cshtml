@model IEnumerable<Prova1_M_5.Models.ViolazioniImportoMaggiore400ViewModel>

@{
    ViewData["Title"] = "Violazioni con Importo Maggiore di 400 Euro";
}

<h1>Violazioni con Importo Maggiore di 400 Euro</h1>

<table class="table">
    <thead>
        <tr>
            <th>Importo</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Data Violazione</th>
            <th>Decurtamento Punti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Importo</td>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.DataViolazione.ToString("dd/MM/yyyy")</td>
                <td>@item.DecurtamentoPunti</td>
            </tr>
        }
    </tbody>
</table>