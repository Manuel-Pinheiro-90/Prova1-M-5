@model IEnumerable<Anagrafica>

@{
    ViewData["Title"] = "Anagrafica";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center text-light">Dati Anagrafici Trasgressori</h1>

    <div class="mb-3 text-right">
        <a class="btn btn-primary" asp-area="" asp-controller="Anagrafica" asp-action="Create">Crea</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdAnagrafica</td>
                    <td>@item.Cognome</td>
                    <td>@item.Nome</td>
                    <td>@item.Indirizzo</td>
                    <td>@item.Città</td>
                    <td>@item.CAP</td>
                    <td>@item.Cod_Fisc</td>
                </tr>
            }
        </tbody>
    </table>
</div>


