@model IEnumerable<Anagrafica>

@{
    ViewData["Title"] = "Anagrafica";
}

<h1> Dati Anagrafici trasgressori</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdAnagrafica</td>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Città</td>
                <td>@item.CAP</td>
                <td>@item.Cod_Fisc</td>
            </tr>
        }
    </tbody>
</table>
<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anagrafica</a>
<a class="nav-link text-dark" asp-area="" asp-controller="Anagrafica" asp-action="Create">Crea</a>
