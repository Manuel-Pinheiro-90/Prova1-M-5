@model IEnumerable<TipoViolazione>

@{
    ViewData["Title"] = "Violazioni";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Tipi di Violazione</h1>

    <div class="mb-3 text-right">
        <a class="btn btn-primary" asp-area="" asp-controller="TipoViolazione" asp-action="Create">Crea</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Descrizione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdViolazione</td>
                    <td>@item.Descrizione</td>
                </tr>
            }
        </tbody>
    </table>
</div>

